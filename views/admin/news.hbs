{{>admin_header}}

<section class="mt-10 p-4 px-6">
    <div class="text-center">
        <a href="/admin/news/add-news" class=""><button
                            class="px-5 w-full md:w-48 py-2 bg-blue-500 text-white rounded text-center">Add News + </button></a>
    </div>
    
    <div class="md:w-3/4 w-full md:p-4 lg:p-4 px-0 mx-auto">
        {{#each news}}
        <div class="flex gap-12 md:m-3 lg:m-3 mx-0 my-3 bg-white p-5 justify-between">
            <div class="w-1/4 md:flex hidden">
                <img src="/static/news-images/{{this._id}}.jpg" class="object-cover">
            </div>

            <div class="my-auto md:w-1/3 lg:w-1/3 w-2/3">
                <a href="/admin/news/{{this._id}}"><h2 class="text-xl font-bold mb-2">{{this.title}}</h2></a>
            </div>
            <div class="my-auto ">
                <div class="grid grid-cols-1 gap-5 mx-auto">
                    <a href="/admin/news/edit/{{this._id}}" class=""><button
                            class="px-5 w-full md:w-48 py-2 bg-blue-500 text-white rounded text-center">Edit</button></a>
                    <a data-id="{{this._id}}" data-type="news" class="deleteBtn"><button
                            class="px-5 w-full md:w-48 py-2 bg-red-500 text-white rounded text-center">Delete</button></a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</section>