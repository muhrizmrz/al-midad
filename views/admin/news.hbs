{{>admin_header}}

<section class="mt-10 p-4 px-6">
    <div class="text-center">
        <a href="/admin/news/add-news" class=""><button
                            class="px-5 w-full md:w-48 py-2 bg-blue-500 text-white rounded text-center">Add News + </button></a>
    </div>
    
    <div class="md:w-3/4 grid grid-cols-3 w-full gap-3 mx-auto">
        {{#each news}}
        <div class="flex flex-col h-full bg-white p-5">
            <div class="h-36 md:flex hidden">
                <img src="/static/news-images/{{this._id}}.jpg" class="object-cover">
            </div>

            <div class="flex-1 p-2">
                <p class="capitalize tracking-wide text-blue-500 mb-2">{{this.date}}</p>
                <a href="/admin/news/{{this._id}}"><h2 class="text-xl font-bold mb-2">{{this.title}}</h2></a>
            </div>
            <div class="w-full">
                    <a href="/admin/news/edit/{{this._id}}" class="w-full"><button
                            class="px-5 w-full py-2 bg-blue-500 text-white rounded text-center">Edit</button></a>
                    <a data-id="{{this._id}}" data-type="news" class="w-full deleteBtnNews"><button
                            class="mt-2 px-5 w-full py-2 bg-red-500 text-white rounded text-center">Delete</button></a>
            </div>
        </div>
        {{/each}}
    </div>
</section>