{{>admin_header}}

<section class="p-6 md:px-10 pt-12 min-h-fit" dir="ltr" style="font-family: Arial, Helvetica, sans-serif;">
    <h1 class="text-2xl font-bold border-b">Settings</h1>
    <div class="mt-6 w-1/2">
        <p class="text-base font-semibold">Categories to be shown on Home page</p>
        <form class="grid grid-cols-2 gap-4 mt-2" id="category_settings" enctype="application/x-www-form-urlencoded"
            method="POST">
            <div>
                <p class="text-md text-gray-700">Category 1</p>
                <select name="category1" dir="rtl" id=""
                    class="ltr-select bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-fit p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                    {{#each categories}}
                    {{#if (eq this.category_arabic ../category1.arabic)}}

                    <option class="text-base" value="{{this._id}}" selected>{{this.category_arabic}}</option>
                    {{else}}

                    <option class="text-base" value="{{this._id}}">{{this.category_arabic}}</option>
                    {{/if}}
                    {{/each}}
                </select>
            </div>
            <div>
                <p class="text-md text-gray-700">Category 2</p>
                <select name="category2" dir="rtl" id=""
                    class="ltr-select bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-fit p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                    {{#each categories}}
                    {{#if (eq this.category_arabic ../category2.arabic)}}
                    <option class="text-base" value="{{this._id}}" selected>{{this.category_arabic}}</option>
                    {{else}}
                    <option class="text-base" value="{{this._id}}">{{this.category_arabic}}</option>
                    {{/if}}
                    {{/each}}
                </select>
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken1}}">
        </form>

        <p class="text-base mt-5 mb-2 font-semibold">New Edition Cover</p>
        {{!-- <img src="/images/covers/{{cover}}.png" alt="Current edition cover
        " class="w-full rounded-lg shadow-md my-2" /> --}}
        <form id="cover_upload_form" class="mt-3 block gap-3" method="post" enctype="multipart/form-data">
            <div class="grid grid-cols-1 gap-4">
                <input type="file" accept=".jpg,.jpeg,.png" id="new-cover" name="new-cover" class="pl-4">
                <input type="text" placeholder="Edition" name="edition">
                <input type="text" placeholder="Content" name="content">
                <input type="text" placeholder="Youtube Video Link" name="youtubeLink">
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken2}}">
            <button type="submit" class="px-8 py-2 my-4 text-base font-
                semibold text-white bg-blue-600 rounded-md hover:bg
                -blue-500">Upload New Image</button>
        </form>

        <p class="text-base mt-5 mb-2 font-semibold">Upload Ad</p>
        <form id="ad_upload_form" class="mt-3 block gap-3" method="post" enctype="multipart/form-data">
            <div class="grid grid-cols-1 gap-4">
                <input type="file" accept=".jpg,.jpeg,.png" id="ad" name="ad" class="pl-4">
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken3}}">
            <button type="submit" class="px-8 py-2 my-4 text-base font-
                semibold text-white bg-blue-600 rounded-md hover:bg
                -blue-500">Upload Ad</button>
        </form>

    </div>
</section>

<div id="success-msg"
    class="fixed -top-1/2  left-1/2 transform -translate-x-1/2 z-10 grid transition-all duration-100 ease-in-out w-fit h-fit rounded-md px-8 py-3 items-center bg-green-600 text-green-200">
    Successfully updated
</div>

<div id="error-msg"
    class="fixed -top-1/2  left-1/2 transform -translate-x-1/2 z-10 grid transition-all duration-100 ease-in-out w-fit h-fit rounded-md px-8 py-3 items-center bg-red-600 text-red-200">
    Failed Operation
</div>